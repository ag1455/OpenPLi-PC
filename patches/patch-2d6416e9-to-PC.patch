+		case 2: /* 4:3 */
+			printf("[cXineLib] m_policy43 %d\n", m_policy43);
+			switch (m_policy43) {
+			case 0: /* scale */
+			case 1: /* nonlinear */
+			case 2: /* panscan */
+			case 3: /* pillarbox */
+				printf("[cXineLib] 4:3 SCALE/NONLINEAR/PANSCAN/PILLARBOX\n");
