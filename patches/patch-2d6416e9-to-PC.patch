+RESULT cXineLib::stop() {
+	if (m_state == stError)
+		return -1;
+
+	ASSERT(m_state != stIdle);
+	ASSERT(stream);
+	if (m_state == stStopped)
+		return -1;
+	xine_stop(stream);
+	// STOP
+	m_state = stStopped;
+	return 0;
