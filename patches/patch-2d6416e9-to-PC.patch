+					strcat_n(sizeof(s), s, "*");
+				if(((*_post_elements)[i])->name)
+					strcat_n(sizeof(s), s, ((*_post_elements)[i])->name);
+				else
+					strcat_n(sizeof(s), s, "<no name!>");
