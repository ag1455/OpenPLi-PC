+static void strcat_n(size_t sz, char *dst, const char *src)
+{
+	size_t len = strlen(dst) + strlen(src);
+	if (sz < 1)
+		return;
+	if (len + 6 > sz) {
+		while (len + 1 < sz) {
+			dst[len++] = '.';
+		}
+		dst[sz-1] = 0;
+		return;
+	}
+	strcat(dst, src);
+}
