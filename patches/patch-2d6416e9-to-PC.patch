+void gXlibDC::pumpEvent(const XKeyEvent &event) {
+	switch (event.type) {
+	case KeyPress:
+	case KeyRelease:
+		switch (event.keycode) {
+		case 95: // F11
+			if (event.type==KeyPress) {
