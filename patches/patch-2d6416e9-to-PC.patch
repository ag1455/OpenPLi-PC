+	printf("  * enable post %s --> %s, %s\n", name, *found ? "found"   : "not found", result ? "enabled" : "no action");
+
+	if(!*found) {
+		printf("  * loading post %s\n", initstr);
+		vpplugin_parse_and_store_post(fe, initstr);
+		result = _vpplugin_enable_post(fe, name, NULL, found);
+		printf("  * enable post %s --> %s, %s\n", name, *found ? "found"   : "not found", result ? "enabled" : "no action");
+	}
+
+	if(result)
+		_vpplugin_unwire(fe);
+
+	free(name);
+	return result;
+}
