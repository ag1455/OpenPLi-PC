+		case 3: /* 16:9 */
+			printf("[cXineLib] m_policy169 %d\n", m_policy169);
+			switch (m_policy169) {
+			case 0: /* scale */
+				printf("[cXineLib] 16:9 SCALE\n");
+				xine_set_param(stream, XINE_PARAM_VO_ASPECT_RATIO, XINE_VO_ASPECT_4_3);
